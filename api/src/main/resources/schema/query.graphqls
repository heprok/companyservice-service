type Query {
    getService(slug: String!): ServiceAndUserRole!
    getConnections(serviceId: ID!, filter: ConnectionFilter!, sort: ConnectionSort!, limit: Int = 10, offset: Int = 0): ConnectionList!
    getConnectionsCount(serviceId: ID!,  filter: ConnectionFilter!): Int!

    #    -------------------------- filters Connections ----------------------
    getConnectionCollaborators(serviceId: ID!, query: String!): [Collaborator]!
    getConnectionIndustries(query: String!, serviceId: ID!): [Industry]!

    # -------------------------------------- charts -------------------------------------
    getCharts(serviceId: ID!): ServiceCharts
    getLocations(query: String!): [Location]
}
